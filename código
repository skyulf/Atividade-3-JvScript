<body>

<script>

let nomes = ['Ana', 'Carlos', 'João', 'Maria', 'Pedro'];
console.log("Terceiro nome:", nomes[2]);

nomes.push('Fernanda');
nomes.unshift('Roberto');
console.log("Array atualizado com novos nomes:", nomes);

nomes.pop(); 
console.log("Array após remoção do último nome:", nomes);

let numeros = [2, 4, 6, 8];
let dobrados = numeros.map(num => num * 2);
console.log("Array com valores dobrados:", dobrados);

let numerosFiltro = [1, 3, 5, 7, 9];
let maioresQueCinco = numerosFiltro.filter(num => num > 5);
console.log("Números maiores que 5:", maioresQueCinco);
</script>

